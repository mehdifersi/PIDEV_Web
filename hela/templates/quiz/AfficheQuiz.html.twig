{% extends 'templateback.html.twig' %}

{% block body %}
    <!doctype html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Document</title>

    </head>
    <body>
    <div class="card-header" height="100">
        <h3 class="text-center font-weight-bolder my-8">Liste des questions</h3>
        <h6 class="text-center font-weight-normal my-8">Grace à VIVA LA VILLA  vous pouvez gagner un cadeau exceptionnelle il faux seulement répondre au quiz correctement </h6>

    </div>
    <form method="post" action="{{ path('recherchequiz') }}">
        <div class="input-group">
            <input type="text" name="search" class="form-control" type="text" placeholder="Entrez id de quiz à chercher..." aria-label="Search for..." aria-describedby="btnNavbarSearch">
            <button type="submit" value="Recherche" class="btn btn-primary" id="btnNavbarSearch" type="button"><svg class="svg-inline--fa fa-magnifying-glass" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="magnifying-glass" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M500.3 443.7l-119.7-119.7c27.22-40.41 40.65-90.9 33.46-144.7C401.8 87.79 326.8 13.32 235.2 1.723C99.01-15.51-15.51 99.01 1.724 235.2c11.6 91.64 86.08 166.7 177.6 178.9c53.8 7.189 104.3-6.236 144.7-33.46l119.7 119.7c15.62 15.62 40.95 15.62 56.57 0C515.9 484.7 515.9 459.3 500.3 443.7zM79.1 208c0-70.58 57.42-128 128-128s128 57.42 128 128c0 70.58-57.42 128-128 128S79.1 278.6 79.1 208z"></path></svg><!-- <i class="fas fa-search"></i> Font Awesome fontawesome.com --></button>
        </div>
    </form>
    <table border="1" class="table table-bordered border-primary table table-striped">
        <tr>

            <th>id</th>
            <th>Question</th>
            <th>option1</th>
            <th>option2</th>
            <th>option3</th>
            <th>reponse</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>

        <tr{% for q in quiz %} >
            <td>{{ q.id}}</td>
            <td>{{ q.question }}</td>
            <td>{{ q.option1 }}</td>
            <td>{{ q.option2 }}</td>
            <td>{{ q.option3 }}</td>
            <td>{{ q.reponse }}</td>
            <td><a href="{{ path('deleteQuiz',{'id':q.id}) }}"><button type="button" class="btn btn-danger" >Delete</button></a></td>
            <td><a href="{{ path('updateQuiz',{'id':q.id}) }}"><button type="button" class="btn btn-info">Update</button></a></td>

        </tr {% endfor %} >
    </table>
    <a href="{{ path('ajouterquiz') }}"><button type="button" class="btn btn-primary">Ajouter un Nouveau quetion pour le quiz</button></a>

    </body>
    </html>
{% endblock %}