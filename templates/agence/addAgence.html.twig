{% extends 'templateBack1.html.twig' %}
{% block title %}New Agence{% endblock %}

{% block body %}
    <div style=" margin-right: 200px;">
        <div style=" " >

            <div class="card-header"><h3 class="text-center font-weight-light my-4">Ajouter une Agence</h3></div>
            <div class="card-body">
                {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
                <div class="mt-4 mb-0 ">
                    <a href="{{ path('affiches')}}"><button class="btn btn-primary btn btn-info" type="button">Back</button></a>
                <div class="text-center mx-auto" style="width: 200px;">
                    <img  alt="bottsrap" src="{{ asset("assets/img/agence.jpg") }}" height="250" width="250">
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div >
                            <label >Ajouter Region </label>
                            {{ form_widget(form.region,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.region) }}

                        </div>
                    </div>

                    <div class="col-md-6">
                        <div >
                            <label>Ajouter Numéro Téléphone </label>
                            {{ form_widget(form.numeroTel,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.numeroTel) }}
                        </div>

                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div >
                            <label>Ajouter Email </label>
                            {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.email) }}

                        </div>


                    </div>

                    <div class="col-md-6">
                        <div >
                            <label>Ajouter WebSite </label>
                            {{ form_widget(form.webSite,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.webSite) }}
                        </div>

                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div >
                            <label>Ajouter le nom du Responsable </label>
                            {{ form_widget(form.nomDuResponsable,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.nomDuResponsable) }}

                        </div>
                    </div>

                    <div class="col-md-6">
                        <div >
                            <label>Le nombre des employees </label>
                            {{ form_widget(form.nombreDesEmployees,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.nombreDesEmployees) }}

                        </div>

                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div >
                            <label>Le jour de création </label>
                            {{ form_widget(form.jourDeCreation,{'attr':{'class':'form-control'}}) }}

                        </div>
                    </div>
                </div>

                <div class="mt-4 mb-0">
                    <div class="d-grid">
                        {{ form_widget(form.ajouter,{'attr':{'class':'btn btn-primary btn-block'}}) }}
                    </div>
                </div>


                {{ form_end(form) }}
                <hr>

                </div>

            </div>

        </div>
    </div>

{% endblock %}
