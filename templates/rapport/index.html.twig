{% extends 'base.html.twig' %}

{% block title %}Rapport index{% endblock %}

{% block body %}
    <h1>Rapport</h1>

    <table id="example1" class="table">
        <thead>
            <tr>
                <th>Id Rapport</th>
                <th>Id Bien</th>
                <th>Id Rendez-Vous</th>
                <th>Date de Rendez-Vous</th>
                <th>Note</th>
                <th>Etat</th>
                <th>Position</th>
                <th>Voisinage</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
        {% for rapport in rapports %}
            <tr>
                <td>{{ rapport.idrapport }}</td>
                <td>{{ rapport.idbien }}</td>
                <td>{{ rapport.idrdv }}</td>
                <td>{{ rapport.daterdv }}</td>
                <td>{{ rapport.notebien }}</td>
                <td>{{ rapport.etatbien }}</td>
                <td>{{ rapport.positionbien }}</td>
                <td>{{ rapport.voisinagebien }}</td>
                <td>
                    <a href="{{ path('app_rapport_show', {'idrapport': rapport.idrapport}) }}"><button class="btn btn-info"><ion-icon name="eye-outline"></ion-icon></button></a>
                    <a href="{{ path('app_rapport_edit', {'idrapport': rapport.idrapport}) }}"><button class="btn btn-info"><ion-icon name="settings-outline"></ion-icon></button></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br><a href="{{ path('app_rapport_new') }}"><button class="btn btn-info"><ion-icon name="add-circle-outline"></ion-icon></button></a>
    <a href="http://127.0.0.1:8000/rapport/ra"><button class="btn btn-info"><ion-icon name="archive-outline"></ion-icon></button></a>
<script src="../../plugins/jquery/jquery.min.js"></script>
