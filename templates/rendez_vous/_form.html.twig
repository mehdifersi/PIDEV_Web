<div style=" margin-right: 200px;">
    <div style=" ">
        <div class="card-header"><h3 class="text-center font-weight-light my-4">Ajouter un Rendez-Vous</h3></div>
        <div class="card-body">
            {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}

            <div class="row mb-3">
                <div class="col-md-6">
                    <div >
                        <label>Référence </label>
                        {{ form_widget(form.ref,{'attr':{'class':'form-control'}}) }}
                        {{ form_errors(form.ref) }}

                    </div>
                </div>

                <div class="col-md-6">
                    <div >
                        <label>Date de Rendez-Vous </label>
                        {{ form_widget(form.daterdv,{'attr':{'class':'form-control'}}) }}

                    </div>

                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <div >
                        <label>Id Propriétaire </label>
                        {{ form_widget(form.idc1,{'attr':{'class':'form-control'}}) }}
                        {{ form_errors(form.idc1) }}


                    </div>
                </div>

                <div class="col-md-6">
                    <div >
                        <label>Id Visiteur </label>
                        {{ form_widget(form.idc2,{'attr':{'class':'form-control'}}) }}
                        {{ form_errors(form.idc2) }}

                    </div>

                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <div >
                        <label>Lieu de Rendez-Vous </label>
                        {{ form_widget(form.lieurdv,{'attr':{'class':'form-control'}}) }}
                        {{ form_errors(form.lieurdv) }}

                    </div>
                </div>
            </div>
            <div class="mt-4 mb-0">
                <div class="d-grid">

                    {{ form_widget(form.Save,{'attr':{'class':'btn btn-primary btn-block'}}) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>

    </div>
</div>
